<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
</head>
<body>
    <!-- Page 1: about -->
    <header id="main-header">
        <nav>
          <ul>
            {% for item in navigation %}
              <li><a href="{{ item.url }}">{{ item.text }}</a></li>
            {% endfor %}
          </ul>
        </nav>
    </header>

    <section id="page-1" class="full-page is-visible">
        {{ content | safe }}
    </section>

    <!-- Page 2: experience -->
    <section id="page-2" class="full-page">
        <div class="content-wrapper">
            <h1 class="section-title">experience</h1>
            <div class="jobs-container">
                <div class="job-tabs">
                    {% for job in experience %}
                        <button class="job-tab {% if loop.first %}active{% endif %}" data-target="{{ job.id }}">{{ job.company }}</button>
                    {% endfor %}
                    <div class="tab-indicator"></div>
                </div>
                <div class="job-panels">
                    {% for job in experience %}
                        <div id="{{ job.id }}" class="job-panel {% if loop.first %}active{% endif %}">
                            <h3>{{ job.position }} <a href="{{ job.link }}" target="_blank" rel="noopener noreferrer"><img src="{{ job.logo }}" alt="{{ job.company }} Logo" class="job-company-logo {{ job.logoClass }}"></a></h3>
                            <p class="job-period">{{ job.period }}</p>
                            <ul>
                                {% for item in job.description %}
                                    <li>{{ item }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <!-- Page 3: projects -->
    <section id="page-3" class="full-page">
        <div class="content-wrapper">
            <h1 class="section-title">projects</h1>
            <div class="projects-grid">
                <a href="https://linktr.ee/whatnowaudio" target="_blank" rel="noopener noreferrer" class="project-card-link">
                    <div class="project-card">
                        <img src="/img/whatnow.jpeg" alt="what now band photo" class="project-image">
                        <div class="project-content">
                            <h3>what now</h3>
                            <p>based in seattle, we make music in a bedroom for you to enjoy in your bedroom</p>
                        </div>
                    </div>
                </a>
                <!-- You can add more project cards here in the future -->
            </div>
        </div>
    </section>

    <script src="/js/scroll-animations.js"></script>
</body>
</html>